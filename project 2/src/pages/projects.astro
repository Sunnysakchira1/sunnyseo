---
import Layout from '../layouts/Layout.astro';
import CaseStudyCard from '../components/CaseStudyCard.astro';

const caseStudies = [
  {
    company: 'Adira Finance',
    title: 'Digital Transformation & SEO Success',
    description: 'Led comprehensive digital transformation for Indonesia\'s leading automotive financing company, focusing on SEO optimization and content strategy.',
    results: [
      '280% increase in organic traffic',
      '156% growth in qualified leads',
      'Achieved #1 ranking for key industry terms',
      'Reduced bounce rate by 45%'
    ],
    services: ['SEO', 'Content Strategy', 'Digital Transformation'],
    image: '/images/adira-case-study.jpg'
  },
  {
    company: 'Happily',
    title: 'E-commerce Growth & Conversion Optimization',
    description: 'Transformed the digital presence of this lifestyle brand through strategic SEO and conversion rate optimization initiatives.',
    results: [
      '300% increase in e-commerce revenue',
      '200% improvement in conversion rate',
      '85% boost in organic search visibility',
      'Expanded to 3 new market regions'
    ],
    services: ['E-commerce SEO', 'CRO', 'Market Expansion'],
    image: '/images/happily-case-study.jpg'
  },
  {
    company: 'iBrokers',
    title: 'B2B Lead Generation & Market Dominance',
    description: 'Developed and executed a comprehensive digital strategy for this leading insurance brokerage platform, focusing on B2B lead generation.',
    results: [
      '450% increase in qualified B2B leads',
      '200% growth in organic traffic',
      'Achieved market leadership position',
      'Reduced customer acquisition cost by 60%'
    ],
    services: ['B2B Marketing', 'Lead Generation', 'Content Marketing'],
    image: '/images/ibrokers-case-study.jpg'
  }
];
---

<Layout title="Projects - Sakchira Marketing Consultant">
  <main>
    <section class="pt-32 pb-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h1 class="text-5xl font-bold mb-6">Case Studies</h1>
          <p class="text-xl text-gray-600">
            Discover how we've helped businesses achieve extraordinary growth through data-driven marketing strategies.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {caseStudies.map(study => (
            <CaseStudyCard {...study} />
          ))}
        </div>
      </div>
    </section>

    <section class="py-20 bg-secondary">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold mb-6">Ready to Grow Your Business?</h2>
        <p class="text-xl text-gray-600 mb-8">
          Let's discuss how we can help you achieve similar results.
        </p>
        <button class="bg-primary text-white px-8 py-4 rounded-full text-lg font-semibold hover:bg-primary/90 transition-colors">
          Schedule a Consultation
        </button>
      </div>
    </section>
  </main>
</Layout>