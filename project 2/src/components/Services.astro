---
const services = [
  {
    title: 'SEO & Content Strategy',
    description: 'Dominate your market with high-converting content that ranks.',
    benefits: [
      'Rank #1 for high-value keywords',
      'Generate qualified organic traffic',
      'Convert visitors into customers'
    ],
    results: '280% average traffic increase',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14" />
    </svg>`,
    link: 'https://sakchira.carrd.co/#ibrokers'
  },
  {
    title: 'Growth Marketing',
    description: 'Scale your business with proven customer acquisition strategies.',
    benefits: [
      'Optimize conversion rates',
      'Reduce acquisition costs',
      'Scale profitable channels'
    ],
    results: '3x ROI within 6 months',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
    </svg>`,
    link: 'https://sakchira.carrd.co/#adira'
  },
  {
    title: 'Digital Transformation',
    description: 'Transform your digital presence and operations for growth.',
    benefits: [
      'Modernize your tech stack',
      'Automate key processes',
      'Improve user experience'
    ],
    results: '45% efficiency improvement',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
    </svg>`
  }
];
---

<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-4xl font-bold mb-4">Services That Drive Results</h2>
      <p class="text-xl text-gray-600">
        Data-driven solutions tailored to your growth goals, backed by proven results
      </p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8">
      {services.map(service => (
        <a href={service.link} class={`block ${service.link ? 'cursor-pointer' : ''}`}>
          <div class="p-8 rounded-2xl bg-white shadow-lg hover:shadow-xl transition-all hover:-translate-y-1">
            <div class="text-primary mb-6">
              <Fragment set:html={service.icon} />
            </div>
            <h3 class="text-2xl font-bold mb-4">{service.title}</h3>
            <p class="text-gray-600 mb-6">{service.description}</p>
            
            <ul class="space-y-3 mb-6">
              {service.benefits.map(benefit => (
                <li class="flex items-center text-gray-700">
                  <svg class="w-5 h-5 text-primary mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                  </svg>
                  {benefit}
                </li>
              ))}
            </ul>

            <div class="pt-6 border-t border-gray-100">
              <div class="text-primary font-semibold">
                Average Result: {service.results}
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>