<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-4xl font-bold mb-4">Let's Work Together</h2>
      <p class="text-xl text-gray-600 mb-8">
        Ready to take your business to the next level? Get in touch for a free consultation.
      </p>
      <form class="space-y-6">
        <div class="grid md:grid-cols-2 gap-6">
          <input
            type="text"
            placeholder="Name"
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-colors"
          />
          <input
            type="email"
            placeholder="Email"
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-colors"
          />
        </div>
        <textarea
          placeholder="Message"
          rows="4"
          class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-colors"
        ></textarea>
        <button
          type="submit"
          class="bg-primary text-white px-8 py-4 rounded-full text-lg font-semibold hover:bg-primary/90 transition-colors"
        >
          Send Message
        </button>
      </form>
    </div>
  </div>
</section>